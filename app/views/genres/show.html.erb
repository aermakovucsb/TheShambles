<% provide(:title, @genre.name) %>
<p id="notice"><%= notice %></p>

<h1 class="text-center"><%= @genre.name.capitalize %> Games</h1>

<div class="clearfix clearfix-divider"></div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Steam ID</th>
      <th>Price (USD)</th>
      <th>Release date</th>
    </tr>
  </thead>
  <tbody>
    <% @genre.games.each do |game| %>
      <tr>
	<td><%= link_to game.name, game %></td>
	<td><%= link_to game.steam_id, "https://store.steampowered.com/app/#{game.steam_id}", target: "_blank" %></td>
	<td><%= game.price %></td>
	<td><%= game.release_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>
