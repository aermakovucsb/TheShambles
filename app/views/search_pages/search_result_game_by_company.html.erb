<% provide(:title, 'Search Result') %>
<h1>Search Result for <%= @search_title %></h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Steam ID</th>
      <th>Price (USD)</th>
      <th>Release date</th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>        
        <% @game = (company.games)[0] %>
        <%  if not @game.blank? %>
        <td><%= link_to @game.name, @game %></td>
	<td><%= link_to @game.steam_id, "https://store.steampowered.com/app/#{@game.steam_id}", target: "_blank" %></td>
        <td><%= @game.price %></td>
	<td><%= @game.release_date %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Go Back to Search Page', search_pages_search_path %>
