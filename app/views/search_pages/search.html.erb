    <label for="minimumPrice">Minimum Price</label>
    <input type="text" class="form-control" id="minimumPrice" name="minimum_price" value="0">
  </div>
  <div class="form-group">
    <label for="maximumPrice">Maximum Price</label>
    <input type="text" class="form-control" id="maximumPrice" name="maximum_price" value="1000">
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-default">Search</button>
  </div>
<% end %>
</div>

