<% provide(:title, 'Search Result') %>
<h1 class="text-center">Search Result for <%= @search_title %></h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Steam ID</th>
      <th>Price (USD)</th>
      <th>Release date</th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>        
        <%  if not game.blank? %>
	<td><a href="/games/<%= game["id"] %>"><%= game["name"] %></a></td>
	<td><%= link_to game["steam_id"], "https://store.steampowered.com/app/#{game["steam_id"]}", target: "_blank" %></td>
        <td><%= game["price"] %></td>
	<td><%= game["release_date"] %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Go Back to Search Page', search_pages_search_path %>
