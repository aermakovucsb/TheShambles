<div align="center">
  <%= will_paginate %>
  <% @gamers.each do |gamer| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(gamer), gamer_path(gamer) %></li>
          <li class="gamer-title"><%= link_to gamer.gamername.capitalize,gamer_path(gamer) %></li>
          <% if logged_in? && current_gamer.admin? && !gamer.admin? %>
            <li><%= link_to "Delete this gamer", gamer_path(gamer), 
             method: :delete,data: {confirm: "Are you sure you want to delete this gamer?"} %></li>
          <% end %>
        </div>
      </div>
    </ul>      
  <% end %>
  <%= will_paginate %>
</div>