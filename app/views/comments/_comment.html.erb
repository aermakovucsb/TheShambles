<div class="row">
  <div class="col-md-2">
    <section class="gamer_info center">
      <%= gravatar_for(comment.gamer, size: 60) %>
    </section>
  </div>
  <div class="col-md-8 well">
    <p><%= comment.description %></p>
    <p>
      <span class="quiet"><small>Created: 
      <%= time_ago_in_words(comment.created_at) %> ago by 
      <%= comment.gamer.gamername %></small></span>
      </p>
  </div>
</div>